<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easyway2in.mysqldbdemo" >

    <uses-permission android:name="android.permission.INTERNET" >
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".tracking"
            android:label="@string/title_activity_tracking"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".displayPage"
            android:label="@string/title_activity_display_page"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Details"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ViewAppliance"
            android:label="@string/title_activity_view_appliance"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ManageAppliance"
            android:label="@string/title_activity_manage_appliance"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ViewSchedule"
            android:label="@string/title_activity_view_schedule"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ManageSchedule"
            android:label="@string/title_activity_manage_schedule"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
